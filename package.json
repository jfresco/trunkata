{
  "name": "trunkata",
  "description": "Truncation utility which preserves HTML content and can truncate by lines.",
  "version": "0.2.1",
  "homepage": "https://github.com/twolfson/trunkata",
  "author": {
    "name": "Todd Wolfson",
    "email": "todd@twolfson.com",
    "url": "http://twolfson.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twolfson/trunkata"
  },
  "bugs": {
    "url": "https://github.com/twolfson/trunkata/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/twolfson/trunkata/blob/master/LICENSE-MIT"
    }
  ],
  "main": "lib/trunkata",
  "engines": {
    "node": ">= 0.6.0"
  },
  "scripts": {
    "build-test": "browserify --transform brfs test/trunkata_test.js --outfile test/trunkata_test.browserify.js",
    "build": "browserify lib/trunkata.js --standalone trunkata --outfile dist/trunkata.js",
    "test": "testem ci"
  },
  "dependencies": {
    "line-height": "~0.1.1",
    "grunt": "~0.3.17",
    "mocha": "~1.11.0",
    "browserify": "~2.23.1",
    "domify": "~1.0.0",
    "brfs": "0.0.6",
    "proclaim": "~1.5.0"
  },
  "keywords": [
    "truncate",
    "truncation",
    "text",
    "dom",
    "html",
    "tag",
    "lines"
  ],
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "testling": {
    "files": [
      "test/trunkata_test.js"
    ],
    "harness": "mocha",
    "browsers": [
      "ie/6..latest",
      "chrome/20..latest",
      "chrome/canary",
      "firefox/10..latest",
      "firefox/nightly",
      "safari/latest",
      "opera/11.0..latest",
      "opera/next",
      "iphone/6",
      "ipad/6"
    ]
  }
}